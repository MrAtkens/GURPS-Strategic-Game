{
  "Routes": [
    // GbimApi service routes in Samgau.Gbim.Api
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamSkipSslValidation": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "gbim-main.kz",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/main/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "Priority": 1000,
      "DangerousAcceptAnyServerCertificateValidator": true,
      "HttpHandlerOptions": {
        "AllowAutoRedirect": true
      },
      "SwaggerKey": "main"
    },
    // Address Reference service routes in MicroService ReferenceAR
    {
      "DownstreamPathTemplate": "/api/address/{everything}",
      "DownstreamScheme": "http",
      "DownstreamSkipSslValidation": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "gbim-reference-ar.kz",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/address/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "Priority": 3001,
      "DangerousAcceptAnyServerCertificateValidator": true,
      "HttpHandlerOptions": {
        "AllowAutoRedirect": true
      }
    },

    {
      "DownstreamPathTemplate": "/api/address/",
      "DownstreamScheme": "http",
      "DownstreamSkipSslValidation": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "gbim-reference-ar.kz",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/address/",
      "UpstreamHttpMethod": [ "Get" ],
      "Priority": 3003,
      "DangerousAcceptAnyServerCertificateValidator": true,
      "HttpHandlerOptions": {
        "AllowAutoRedirect": true
      }
    },
    //Notifications service routes in Microservices Notifications
    {
      "DownstreamPathTemplate": "/api/notification/{everything}",
      "DownstreamScheme": "http",
      "DownstreamSkipSslValidation": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "gbim-notification-api.kz",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/notification/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "Priority": 3004,
      "DangerousAcceptAnyServerCertificateValidator": true,
      "HttpHandlerOptions": {
        "AllowAutoRedirect": true
      }
    },
    // Registration service routes in MicroService Registration
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamSkipSslValidation": true,
      "DownstreamHostAndPorts": [
        {
          "Host": "gbim-registration-api.kz",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/registration/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "Priority": 3005,
      "DangerousAcceptAnyServerCertificateValidator": true,
      "HttpHandlerOptions": {
        "AllowAutoRedirect": true
      }
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "main",
      "Config": [
        {
          "Name": "Main API",
          "Version": "v1",
          "Url": "http://gbim-main.kz/swagger/index.html"
        }
      ]
    }
  ],
  "GlobalConfiguration": {}
}
